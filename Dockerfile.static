FROM node:20-alpine

WORKDIR /app

# Copy package files and install production dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source code
COPY . .

# Build the static container server
RUN npx esbuild server/static-container.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/static-container.js

EXPOSE 5050

ENV NODE_ENV=production
ENV PORT=5050

CMD ["node", "dist/static-container.js"]